<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:layout_marginTop="52dp"
        android:id="@+id/imageView3"
        android:layout_below="@+id/tvDrinksBought"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_x="84dp"
        android:layout_y="301dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/tvWelcomeMsg"
        android:layout_alignStart="@+id/tvWelcomeMsg"
        android:layout_x="154dp"
        android:layout_y="308dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/ivStart"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toRightOf="@+id/bMap"
        android:layout_toEndOf="@+id/bMap"
        android:layout_x="249dp"
        android:layout_y="337dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toLeftOf="@+id/ivStart"
        android:layout_toStartOf="@+id/ivStart"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_x="206dp"
        android:layout_y="280dp" />

    <TextView
        android:text="Drinks Bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDrinksBought"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/tvPubsVisited"
        android:layout_alignBottom="@+id/tvPubsVisited"
        android:layout_toLeftOf="@+id/bMap"
        android:layout_toStartOf="@+id/bMap"
        android:layout_x="127dp"
        android:layout_y="249dp" />

    <View
        android:layout_width="fill_parent"
        android:background="#000000"
        android:layout_above="@+id/imageView5"
        android:layout_marginBottom="13dp"
        android:layout_height="3dp"
        android:layout_x="19dp"
        android:layout_y="232dp" />

    <View
        android:layout_width="3dp"
        android:background="#000000"
        android:layout_alignTop="@+id/etUsername"
        android:layout_toLeftOf="@+id/imageView5"
        android:layout_toStartOf="@+id/imageView5"
        android:layout_height="98dp"
        android:layout_x="63dp"
        android:layout_y="274dp" />

    <Button
        android:text="Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:id="@+id/bMap"
        android:layout_x="152dp"
        android:layout_y="386dp" />

    <TextView
        android:text="PubsVisted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPubsVisited"
        android:textStyle="normal|bold"
        android:layout_below="@+id/etUsername"
        android:layout_toRightOf="@+id/tvWelcomeMsg"
        android:layout_toEndOf="@+id/tvWelcomeMsg"
        android:layout_x="28dp"
        android:layout_y="178dp" />

    <View
        android:layout_width="fill_parent"
        android:background="#000000"
        android:layout_above="@+id/imageView5"
        android:layout_marginBottom="13dp"
        android:layout_height="3dp"
        android:id="@+id/view2"
        android:layout_x="24dp"
        android:layout_y="98dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/tvWelcomeMsg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="36dp"
        android:layout_y="61dp" />

    <TextView
        android:id="@+id/tvWelcomeMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:layout_x="138dp"
        android:layout_y="17dp" />

</AbsoluteLayout>